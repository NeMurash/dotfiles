#!/usr/bin/python3

import sys
import random

def usage():
	print(f"[INFO]  Usage: {sys.argv[0]} <file>")
	quit()

try:
	assert(len(sys.argv) > 1)
except AssertionError:
	print("[ERROR] Must specify a file to read from.")
	usage()

try:
	f = open(sys.argv[1])
except FileNotFoundError:
	print("[ERROR] File specified does not exist")
	usage()

foo = f.read().split("\n")
foo.pop()

choice = random.choice(foo)

print(choice)
